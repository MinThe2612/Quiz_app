<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Yellow_idk"
    android:backgroundTint="@color/Yellow_idk"
    android:orientation="vertical">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/Red_rose"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="QuizApp"
        android:textAlignment="center"
        android:textColor="@color/white_2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tài khoản"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textColorLink="@color/black" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textColorLink="@color/black" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/Red_rose"
            android:text="Login"
            android:textColor="@color/white_2"
            android:textColorHint="@color/white_2"
            android:textColorLink="@color/white_2" />

        <Button
            android:id="@+id/btnGoRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/Red_rose"
            android:text="Register"
            android:textColor="@color/white_2"
            android:textColorLink="@color/white_2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
